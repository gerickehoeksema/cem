@{
    Layout = "_LoginLayout";
}

<div class="card card-outline card-primary">
    <div class="card-header text-center">
        <h1 class="h1"><b>Login</b></h1>
    </div>
    <div class="card-body">
        <span class="login-box-msg">Sign in to start your session</span>

        <form>
            <div class="input-group mb-3">
                <input type="text" id="inpUsername" class="form-control" placeholder="Username">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" id="inpPassword" class="form-control" placeholder="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="button" id="btnSignIn" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        <!-- /.social-auth-links -->
    </div>
    <!-- /.card-body -->
</div>

@section scripts{ 
    <script asp-append-version="true" src="~/js/pages/account/login.js"></script>
}